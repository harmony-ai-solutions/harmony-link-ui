# Stage 1: Build the React app for Harmony Speech Engine mode
FROM node:22.18.0-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm install --include=dev

COPY . .

# Copy .env.example to .env if no .env file exists
RUN if [ ! -f .env ]; then cp .env.example .env; fi

# Rebuild app at startup to ensure latest env vars are embedded in static UI code
CMD ["sh", "-c", "npm run build:speech-engine && npx serve -s dist -l 80"]
